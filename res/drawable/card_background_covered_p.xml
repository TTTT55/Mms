<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/card_radius" />
            <solid android:color="@color/card_background_covered_bg_p" />
            <stroke android:width="@dimen/border_width" android:color="@color/card_background_covered_border" />
        </shape>
    </item>
    <item android:left="@dimen/border_width" android:top="@dimen/border_width" android:right="@dimen/border_width" android:bottom="@dimen/border_width">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/card_radius" />
            <solid android:color="#0d000000" />
            <padding android:left="@dimen/card_background_covered_padding" android:right="@dimen/card_background_covered_padding" />
        </shape>
    </item>
</layer-list>